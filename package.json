{
  "name": "agent-mongo",
  "version": "0.1.0",
  "description": "MongoDB CLI for AI agents",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bun build src/index.ts --outdir dist --target=bun --sourcemap",
    "dev": "bun run src/index.ts",
    "prepare": "simple-git-hooks",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "oxlint .",
    "lintf": "oxlint --fix .",
    "lint:fix": "oxlint --fix .",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "build:release": "sh ./scripts/build-release-assets.sh",
    "release": "sh ./scripts/release.sh"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "mongodb": "^6.16.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^24",
    "bun-types": "^1.3.8",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.8.2"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lintf && bun run format"
  },
  "engines": {
    "node": ">=24"
  }
}
